<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PlanerAkademia.Styles">

    <Style TargetType="{x:Type DatePicker}">
        <Setter Property="BorderBrush" Value="{StaticResource LightBrush}"/>
        <Setter Property="Margin" Value="25"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Background" Value="{StaticResource VeryLightBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource Thin}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundMainBrush}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
</ResourceDictionary>